<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="wp-cron" class="LoggerAppenderFile">
		<param name="file" value="/var/www/wp_cron.loc/public_html/wp-content/plugins/wpcron/logs.html" />
        <layout class="LoggerLayoutHtml">
            <param name="locationInfo" value="true" />
        </layout>
    </appender>
    <root>
        <appender_ref ref="wp-cron" />
    </root>
</configuration>